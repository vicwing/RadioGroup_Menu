<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <View
                android:id="@+id/view_title_bg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/xml_oval_half_transparent_bg" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="StickyHeaderListView"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_action_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp">

            <View
                android:id="@+id/view_action_more_bg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/xml_oval_half_transparent_bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_action_more" />
        </FrameLayout>
    </RelativeLayout>

    <com.sunfusheng.StickyHeaderListView.view.QfangFrameLayout
        android:id="@+id/qfangframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@+id/load_more_list_view_ptr_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.sunfusheng.StickyHeaderListView.view.SmoothListView.SmoothListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.baiiu.filter.DropDownMenu
                android:id="@+id/dropDownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mFilterContentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="22sp" />
            </com.baiiu.filter.DropDownMenu>
        </LinearLayout>
    </com.sunfusheng.StickyHeaderListView.view.QfangFrameLayout>

</LinearLayout>