<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_commom_formlayout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:clickable="false"
    android:background="@drawable/operate_bg">

    <View
        android:id="@+id/view_top_line"
        style="@style/xpt_horizontal_line"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:drawablePadding="16dp"
        android:textColor="@color/grey_333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_common_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:drawablePadding="5dp"
        android:textColor="@color/grey_888888"
        android:textSize="16sp" />

    <View
        android:id="@+id/view_bottom_long"
        style="@style/xpt_horizontal_line"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/view_bottom_short"
        style="@style/xpt_horizontal_line_margin_8dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
</RelativeLayout>

