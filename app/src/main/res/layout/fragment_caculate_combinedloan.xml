<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white_f5f5f9"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.cdj.myapplication.widget.CommonFormLayout
            android:id="@+id/frame_loan"
            style="@style/caculate_CommonFormLayout"
            />

        <com.example.cdj.myapplication.widget.CommonFormLayout
            android:id="@+id/frame_interest_rate"
            style="@style/caculate_CommonFormLayout"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.example.cdj.myapplication.widget.CommonFormLayout
            android:id="@+id/frame_fund_loan"
            style="@style/caculate_CommonFormLayout"
            />

        <com.example.cdj.myapplication.widget.CommonFormLayout
            android:id="@+id/frame_fundloan_rate"
            style="@style/caculate_CommonFormLayout"
            />

    </LinearLayout>


    <com.example.cdj.myapplication.widget.CommonFormLayout
        android:layout_marginTop="10dp"
        android:id="@+id/frame_loan_year"
        style="@style/caculate_CommonFormLayout"/>


    <Button
        android:id="@+id/btn_do_caculate"
        android:layout_marginTop="50dp"
        style="@style/Common_Btn_style"
        android:text="立即计算"
        />
</LinearLayout>