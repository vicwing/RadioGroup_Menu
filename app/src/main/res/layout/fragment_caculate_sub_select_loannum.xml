<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white_f5f5f9"
              android:orientation="vertical">

    <include
        layout="@layout/include_fragment_title"/>

    <ListView
        android:id="@+id/lv_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_shape_detail_top_bottom_divadeline"
        android:divider="@color/divide_line_e5e5e5"
        android:dividerHeight="1px"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <com.example.cdj.myapplication.widget.CommonFormLayout
        android:id="@+id/frame_other_price"
        style="@style/caculate_CommonFormLayout"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        app:hasRightArrow="true"
        app:titleText="其他金额"/>
</LinearLayout>