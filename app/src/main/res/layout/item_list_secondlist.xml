<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp">

    <ImageView
        android:id="@+id/iv_seclist_logo"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_default_image"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_house_title"
            style="@style/CommTextview"
            android:textSize="16sp"
            tools:text="东乐花园"
            />

        <TextView
            android:id="@+id/tv_address"
            style="@style/CommTextview"
            android:textSize="16sp"
            tools:text="罗湖 布心"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_house_style"
                style="@style/CommTextview"
                android:textSize="16sp"
                tools:text="罗湖 布心"
                />

            <TextView
                android:id="@+id/tv_avg_price"
                style="@style/CommTextview"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange"
                android:textSize="16sp"
                tools:text="罗湖 布心"
                />

        </RelativeLayout>

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/item_list_sec_tagcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="10dp"
            app:container_enable_drag="false"
            app:horizontal_interval="10dp"
            app:tag_clickable="true"
            app:tag_theme="pure_teal"
            app:vertical_interval="10dp"/>

    </LinearLayout>

</LinearLayout>