<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CommonFormLayout="http://schemas.android.com/apk/com.example.cdj.myapplication.cusview" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="radio_button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:drawablePadding">5dp</item>
    </style>


    <style name="xpt_horizontal_line">
        <item name="android:background">@color/divide_line_e5e5e5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>


    <!---->
    <style name="CommTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_33333</item>
        <item name="android:textSize">@dimen/text_size_second</item>
    </style>

    <!--计算器CommonFormLayout style-->
    <style name="caculate_CommonFormLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="contentTextColor">@color/black_33333</item>
        <item name="CommonFormLayout_titleTextColor">@color/grey_888888</item>
    </style>

    <!--所有的提交按钮的背景-->
    <style name="Common_Btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/btn_groupjoin_submit</item>
        <item name="android:text">确定</item>
        <item name="android:textSize">@dimen/text_size_second</item>
    </style>
    <!-- 页标题-->
    <style name="Common_Title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
