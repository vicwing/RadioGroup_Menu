<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:id="@+id/iv_newhouse_image"
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/commom_textview"
                android:textColor="@color/black333333"
                android:textSize="16sp"
                tools:text="燕晗山居" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/commom_textview"
                android:layout_marginTop="8dp"
                android:textColor="@color/grey_888888"
                android:maxLines="1"
                android:textSize="14sp"
                tools:text="燕晗山居" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_area"
                    style="@style/commom_textview"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/grey_888888"
                    android:singleLine="true"
                    android:textSize="13sp"
                    tools:text="燕晗山居" />

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/commom_textview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/piechart_FF9933"
                    android:layout_marginTop="7dp"
                    android:textSize="13sp"
                    tools:text="燕晗山居/㎡" />
            </RelativeLayout>

            <com.sunfusheng.StickyHeaderListView.view.TagContainerLayout.TagContainerLayout
                android:id="@+id/tagcontainerLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:container_background_color="#00000000"
                app:container_enable_drag="false"
                app:container_border_width="0dp"
                app:container_border_color="#00000000"
                app:horizontal_interval="8dp"
                app:tag_background_color="#00000000"
                app:tag_clickable="false"
                app:tag_theme="none"
                app:tag_text_size="12sp"
                app:tag_corner_radius="1dp"
                app:vertical_interval="7dp" />

            <TextView
                android:id="@+id/tv_graoupbuy"
                style="@style/commom_textview"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/icon_join_group"
                android:drawablePadding="8dp"
                android:textColor="@color/black333333"
                android:textSize="13sp"
                android:visibility="gone"
                tools:text="燕晗山居/㎡" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/xpt_horizontal_line" />
</LinearLayout>